<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:background="@color/fragment_movie_details_info_background"
    android:orientation="vertical"
    android:padding="8dp">

    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
        android:id="@+id/youtube_player_view"
        android:layout_width="150dp"
        android:layout_height="100dp"
        app:showFullScreenButton="false"
        app:showVideoDuration="false"
        app:showSeekBar="false"
        app:showYouTubeButton="false"
        app:showVideoCurrentTime="false"
        app:enableLiveVideoUi="false">

    </com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView>

    <TextView
        android:id="@+id/textView_videoName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_toEndOf="@+id/youtube_player_view"
        android:text="Author"
        android:textColor="@color/textColorWhiteDark"
        android:textSize="18sp" />
</RelativeLayout>