<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:background="@color/fragment_movie_details_info_background"
    android:orientation="vertical"
    android:padding="8dp">

    <ImageView
        android:id="@+id/imageView_videoThumbai"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/youtube_no_thumbai">

    </ImageView>

    <TextView
        android:id="@+id/textView_videoName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_toEndOf="@+id/imageView_videoThumbai"
        android:textColor="@color/text_color_white_dark"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageView_playButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/imageView_videoThumbai"
        android:layout_alignEnd="@+id/imageView_videoThumbai"
        android:layout_centerVertical="true"
        android:layout_marginStart="49dp"
        android:layout_marginEnd="51dp"
        app:srcCompat="@drawable/ic_play_button" />
</RelativeLayout>