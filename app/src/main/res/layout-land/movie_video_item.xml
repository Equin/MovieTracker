<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:background="@color/fragment_movie_details_info_background"
    android:maxHeight="180dp"
    android:minHeight="180dp"
    android:orientation="vertical"
    android:padding="8dp">

    <ImageView
        android:id="@+id/imageView_videoThumbai"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="false"
        android:layout_centerInParent="false"
        android:layout_centerHorizontal="true"
        android:background="@drawable/youtube_no_thumbai">

    </ImageView>

    <TextView
        android:id="@+id/textView_videoName"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView_videoThumbai"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="23dp"
        android:textAlignment="center"
        android:textColor="@color/text_color_white_dark"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageView_playButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/imageView_videoThumbai"
        android:layout_alignTop="@+id/imageView_videoThumbai"
        android:layout_alignEnd="@+id/imageView_videoThumbai"
        android:layout_alignBottom="@+id/imageView_videoThumbai"
        android:layout_marginStart="65dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="21dp"
        app:srcCompat="@drawable/ic_play_button" />
</RelativeLayout>